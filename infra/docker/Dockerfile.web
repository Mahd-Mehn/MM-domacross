# syntax=docker/dockerfile:1
FROM node:20-alpine

# System deps (curl already used for healthcheck)
RUN apk add --no-cache curl

# Create non-root user
RUN addgroup -g 1001 -S nodejs && adduser -S nextjs -u 1001

# Set workdir directly to the web app for dependency install
WORKDIR /app/apps/web

# Copy manifests first (add package-lock.json if present)
COPY apps/web/package.json ./
# COPY apps/web/package-lock.json ./

# Install deps (prefer ci if lockfile uncommented)
RUN if [ -f package-lock.json ]; then npm ci; else npm install; fi

# Now copy the rest of the repo
WORKDIR /app
COPY . .

# Ensure ownership
RUN chown -R nextjs:nodejs /app

# Build (needs dev deps present)
WORKDIR /app/apps/web
RUN npm run build || true

USER nextjs
EXPOSE 3000
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000 || exit 1

CMD ["npm","run","start"]