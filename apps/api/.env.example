# Environment Configuration
APP_ENV=production

# Database Configuration
# Use either DATABASE_URL (for production) or individual postgres settings (for development)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Alternative individual database settings (used if DATABASE_URL not provided)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=domacross
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Admin Wallets (comma-separated list of wallet addresses)
ADMIN_WALLETS=0x1234567890123456789012345678901234567890,0x9876543210987654321098765432109876543210

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT (will be auto-generated if not provided)
JWT_PRIVATE_KEY_B64=
JWT_PUBLIC_KEY_B64=

# Doma Protocol Configuration (optional)
DOMA_TESTNET_CHAIN_ID=
DOMA_RPC_URL_FALLBACK=
DOMA_POLL_BASE_URL=
DOMA_POLL_API_KEY=
DOMA_MARKETPLACE_BASE_URL=
DOMA_ORDERBOOK_BASE_URL=
DOMA_SUBGRAPH_URL=
